# Database
DATABASE_URL="postgresql://user:password@localhost:5432/preem_hr"

# Application
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3002"  # Required for password reset email redirects

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Upstash Redis (for rate limiting - optional, disables rate limiting if not set)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Email (Resend)
RESEND_API_KEY="re_xxx"  # Required for termination document email notifications
EMAIL_FROM="noreply@your-domain.com"  # Optional, defaults to noreply@preem-hr.com

# Inngest (Event-driven workflows & scheduled jobs)
INNGEST_EVENT_KEY="your-inngest-event-key"  # Required for sending events to Inngest
INNGEST_SIGNING_KEY="your-inngest-signing-key"  # Required for production (verifies Inngest requests)

# Anthropic AI (for AI-powered import system)
ANTHROPIC_API_KEY="sk-ant-xxx"  # Required for AI import agent

# Dropbox Sign (formerly HelloSign) - Electronic Signatures
DROPBOX_SIGN_API_KEY="your-dropbox-sign-api-key"  # Required for electronic document signing

# Google Gemini (for AI voice agent)
GOOGLE_API_KEY="your-google-genai-api-key"  # Required for Gemini Live voice agent
