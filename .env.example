# Database
DATABASE_URL="postgresql://user:password@localhost:5432/preem_hr"

# Application
NODE_ENV="development"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
